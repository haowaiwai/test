<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center_vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView android:layout_width="fill_parent"
		    android:paddingLeft="3dip"
			android:layout_height="wrap_content" android:id="@+id/userHead"
			android:paddingTop="3dip" />
		<LinearLayout android:orientation="vertical"
		    android:layout_marginLeft="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/post_name"                    
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" android:textSize="14px"
                    android:text="" />
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">				
				<TextView android:id="@+id/post_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textSize="14px"
					 android:text="" />
				<TextView android:id="@+id/source"
					android:paddingLeft="5dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textSize="14px"
					android:text="" />
			</LinearLayout>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/content"
				android:text=""
				android:textSize="15px" />
		</LinearLayout>
	</LinearLayout>
	<ImageView android:layout_width="296dip"
		android:layout_height="222dip" android:id="@+id/img"
		android:paddingBottom="2dip"
		android:paddingTop="2dip" />
</LinearLayout>
