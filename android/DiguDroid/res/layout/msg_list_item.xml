<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:paddingLeft="5dip"
	android:paddingTop="2dip" android:paddingBottom="2dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingRight="5dip">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/userHead"
		android:paddingTop="3dip" android:src="@drawable/icon" />
	<LinearLayout android:orientation="vertical"
		android:paddingLeft="5dip" android:layout_width="270dip"
		android:layout_height="wrap_content" android:paddingRight="5dip">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/post_name"
				android:textColor="@color/blue_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="15dip"
				android:text="Candy" />
			<TextView android:id="@+id/post_time"
				android:paddingLeft="5dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="12dip"
				android:textColor="@color/black" android:text="19小时前" />
			<TextView android:id="@+id/source"
				android:paddingLeft="5dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="12dip"
				android:textColor="@color/blue_2" android:text="通过网站" />
		</LinearLayout>
		<TextView android:id="@+id/post_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/black"
			android:textSize="15dip" android:paddingTop="3dip"
			android:paddingBottom="3dip" android:text="" />
		<TextView android:id="@+id/tr_post_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@color/black"
            android:textSize="15dip" android:paddingTop="3dip"
            android:visibility="gone"            
            android:paddingBottom="3dip" android:text="" />
			
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/pic"
			android:visibility="gone" android:src="@drawable/icon" />

	</LinearLayout>	
</LinearLayout>