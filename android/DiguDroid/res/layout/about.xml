<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:admobsdk="http://schemas.android.com/apk/res/cn.icekirin.digudroid"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	android:background="@android:color/white" android:padding="10dip">

	<LinearLayout android:id="@+id/logo_row"
		android:gravity="center_vertical" android:layout_marginBottom="20dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView android:src="@drawable/android_cn"
			android:layout_marginRight="10dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView android:text="ChinaAndroidDev.com"
			android:textSize="20sp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/about_text" />

	<LinearLayout android:id="@+id/author_row"
		android:layout_marginLeft="40dip" android:layout_marginBottom="5dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ImageView android:src="@drawable/icon1"
			android:layout_marginRight="20dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView android:text="jmukirin" android:textSize="24sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:id="@+id/author_row2"
		android:layout_marginLeft="40dip" android:layout_marginBottom="5dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ImageView android:src="@drawable/nunu"
			android:layout_marginRight="20dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView android:text="nunu" android:textSize="24sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>    
</LinearLayout>